{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",

    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "nativewind-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
