// Prisma schema for your app
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * --------------------------
 * ENUMS
 * ---------------------------
 */

enum VerseType {
  VERSE
  CHORUS
  BRIDGE
  INTRO
  OUTRO
}

enum TAGS {
  CHRISTMAS
}

enum AppSource {
  LYNTI_BNENG
  KOT_JINGRWAI
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

enum AppVersionTags {
  BETA
  STABLE
  BUGFIX
  PATCH
}

enum AppVersionType {
  PTA
  OTA
}

enum AppVersionPlatform {
  ANDROID
  IOS
}

enum EASBuildStatus {
  FINISHED
  ERRORED
  CANCELED
}

/**
 * --------------------------
 * MODELS
 * ---------------------------
 */

model Auth {
  id           String @id @default(uuid())
  email        String @unique
  hashPassword String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
  otps   otp[]
  tokens Token[]

  @@index([id])
}

model otp {
  id        String  @id @default(uuid())
  otp       String
  isRevoked Boolean @default(false)

  authId String?
  auth   Auth?   @relation(fields: [authId], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model SongPrayer {
  id        String   @id @default(uuid())
  lines     Line[]
  songId    String?
  song      Song?    @relation(fields: [songId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([songId])
  @@index([id])
}

model Token {
  id        String   @id @default(uuid())
  userId    String
  authId    String
  hash      String   @unique // store hashed token
  isRevoked Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  auth      Auth     @relation(fields: [authId], references: [id])

  @@index([userId])
  @@index([authId])
  @@index([expiresAt])
}

model User {
  id       String  @id @default(uuid())
  role     Role    @default(USER)
  imageUrl String?
  hasImage Boolean @default(false)
  name     String
  status   Status  @default(ACTIVE)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  createdVerses BibleVerse[]
  authId        String?      @unique
  auth          Auth?
  tokens        Token[]

  @@index([id])
  @@index([name])
  @@index([role])
}

/**
 * --- Songs ---
 */

model Song {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trackId   String?
  track     Track?   @relation(fields: [trackId], references: [id])

  paragraphs Paragraph[]
  metadataId String       @unique
  metadata   SongMetadata @relation(fields: [metadataId], references: [id])
  prayers    SongPrayer[]

  @@index([id])
  @@index([trackId])
}

model SongMetadata {
  id        String      @id @default(uuid())
  number    Int // song number/index
  oldNumber Int?
  source    AppSource[] @default([KOT_JINGRWAI])
  language  String // e.g. 'en', 'kn', 'khasi'
  author    String?
  isChorus  Boolean     @default(false)
  composer  String?
  tags      String[] // optional categories/tags
  syllables String?
  reference String?
  tune      String?
  meter     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  songId String?
  song   Song?

  @@unique([number, isChorus, id])
  @@index([isChorus])
}

model Line {
  id        String   @id @default(uuid())
  text      String
  order     Int
  isPaidBah Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  paragraphId String?
  paragraph   Paragraph?  @relation(fields: [paragraphId], references: [id])
  prayerId    String?
  prayer      SongPrayer? @relation(fields: [prayerId], references: [id])

  @@unique([paragraphId, order])
  @@index([paragraphId])
  @@index([text])
  @@index([id])
}

model Paragraph {
  id        String     @id @default(uuid())
  order     Int
  lines     Line[]
  type      VerseType?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  songId String
  song   Song   @relation(fields: [songId], references: [id])
}

model Track {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  songs      Song[]
  metadataId String        @unique
  metadata   TrackMetadata @relation(fields: [metadataId], references: [id])
}

model TrackMetadata {
  id          String   @id @default(uuid())
  supabaseId  String
  path        String
  fileName    String
  fullPath    String
  downloadUrl String
  mimeType    String
  fileSize    Int // bytes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trackId String? @unique
  track   Track?
}

/**
 * --- App Version Control ---
 */

model AppVersion {
  id                  String               @id @default(uuid()) @db.Uuid
  version             String
  title               String
  description         String[]
  type                AppVersionType       @default(PTA)
  platforms           AppVersionPlatform[] @default([ANDROID, IOS])
  releaseNotesUrl     String?
  downloadUrl         String?
  releaseDate         DateTime             @default(now())
  minSupportedVersion String?
  author              String?
  tags                AppVersionTags[]     @default([STABLE])
  additionalInfo      Json?
  status              Status               @default(ACTIVE)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  versionCode    Int?
  buildNumber    String?
  runtimeVersion String?

  @@index([version])
}

model EASBuildWebhook {
  id                  String             @id @default(uuid()) @db.Uuid
  buildId             String             @unique // EAS build id
  accountName         String
  projectName         String
  appId               String
  platform            AppVersionPlatform
  status              EASBuildStatus
  buildDetailsPageUrl String?

  // Artifacts
  buildUrl        String?
  logsS3KeyPrefix String?

  // Metadata subset
  appVersion       String?
  appBuildVersion  String?
  buildProfile     String?
  distribution     String?
  runtimeVersion   String?
  channel          String?
  gitCommitHash    String?
  gitCommitMessage String?

  // Timestamps
  createdAt   DateTime
  enqueuedAt  DateTime?
  completedAt DateTime?

  // Error info
  errorMessage String?
  errorCode    String?

  // Full payload
  rawPayload Json

  @@index([platform])
  @@index([status])
  @@index([completedAt])
}

/**
 * --- Userâ€™s Installed App Versions ---
 */

model DownloadUsers {
  id          String   @id @default(uuid())
  userId      String   @unique
  appVersion  String
  lastLoginAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/**
 * --- Bible Verses ---
 */

model Details {
  id        String   @id @default(uuid())
  text      String   @unique
  reference String   @unique
  version   String
  verseurl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  verse     Verse?

  @@index([id])
}

model Verse {
  id         String      @id @default(uuid())
  detailsId  String      @unique
  details    Details     @relation(fields: [detailsId], references: [id])
  notice     String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  bibleVerse BibleVerse?

  @@index([id])
}

model BibleVerse {
  id        String   @id @default(uuid())
  verseId   String   @unique
  verse     Verse    @relation(fields: [verseId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@index([id])
}

model Log {
  id        String   @id @default(uuid())
  type      String // 'ERROR', 'INFO', 'WARN', or 'LOG'
  content   String // The log message; can store stringified JSON
  isBackend Boolean  @default(false)
  message   String
  timestamp DateTime @default(now()) // When the log was created

  @@index([isBackend, timestamp])
  @@index([type, timestamp])
}
