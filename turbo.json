{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "apps/**/.env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "EXPO_PUBLIC_API_URL",
        "EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "EXPO_PUBLIC_IS_BETA"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["DATABASE_URL", "EXPO_PUBLIC_API_URL"]
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": false,
      "persistent": false,
      "env": ["DATABASE_URL", "DIRECT_URL", "SUPABASE_SECRET_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_API_URL",
        "EXPO_PUBLIC_API_URL",
        "EXPO_PUBLIC_IS_BETA"
      ]
    }
  }
}
